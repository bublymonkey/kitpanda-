

	



on npc right click:
	if npc is 1:
		if player is holding player head:
			set {_sellhead} to a new chest inventory with 1 row named "             &2&lSell head"
			set slot 0 of {_sellhead} to black glass pane named " " 
			set slot 1 of {_sellhead} to black glass pane named " " 
			set slot 2 of {_sellhead} to black glass pane named " " 
			set slot 3 of {_sellhead} to green glass pane named "&2&lSell Head" 
			set slot 4 of {_sellhead} to black glass pane named " " 
			set slot 5 of {_sellhead} to red glass pane named "&4&lCancel" 
			set slot 6 of {_sellhead} to black glass pane named " " 
			set slot 7 of {_sellhead} to black glass pane named " " 
			set slot 8 of {_sellhead} to black glass pane named " " 
			open {_sellhead} to player 
		else: 
			send "&4&lYou must holding head in hand to sell" to player
			close inventory of player
on inventory click:
	if name of event-inventory is "             &2&lSell head":
		if index of event-slot = 3:
			if player is holding player head:
				set {headamount::%uuid of player%} to item amount of player's tool
				play sound "minecraft:entity.experience_orb.pickup"
				remove held item of player from player
				close inventory of player
				add {headamount::%uuid of player%} to {skulls::%uuid of player%}
				add {headamount::%uuid of player%} * {skullmulti::%uuid of player%} to {money::%uuid of player%}
				send "&l&2You have succesfully sold the head. You have been awarded &a$%{headamount::%uuid of player%} * {skullmulti::%uuid of player%}% &2and one skull has been added to your account."
on inventory click:
	if name of event-inventory is "             &2&lSell head":
		if index of event-slot = -1:
			send "how" to player
		else:
			cancel event

